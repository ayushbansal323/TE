
/*lex program to count number of words*/
%{ 
#include<stdio.h> 
#include<string.h> 
%} 
  
/* Rules Section*/
%%
[ \n\t]+					{}
(System([a-zA-Z0-9"."])*)		  	{printf(" \t%-16s\t\t | System call\n---------------------------------------------------------------------------------------\n",yytext);}
(public|private|protected)    			{printf(" \t%-16s\t\t | Access specifier\n---------------------------------------------------------------------------------------\n",yytext);}
(\(|\[|\]|\)|\{|\})				{printf(" \t%-16s\t\t | Braces\n---------------------------------------------------------------------------------------\n",yytext);}
(\/\/([a-zA-Z0-9"."])*)				{printf(" \t%-16s\t\t | comment\n---------------------------------------------------------------------------------------\n",yytext);}
(\/\*([a-zA-Z0-9"."])*)				{printf(" \t%-16s\t\t | Start of multiline comment\n---------------------------------------------------------------------------------------\n",yytext);}
(([a-zA-Z0-9"."])*\*\/)				{printf(" \t%-16s\t\t | End of multiline comment\n---------------------------------------------------------------------------------------\n",yytext);}
(int|void|float|double|boolean)			{printf(" \t%-16s\t\t | DataType\n---------------------------------------------------------------------------------------\n",yytext);}
(for|while)					{printf(" \t%-16s\t\t | Iteration \n---------------------------------------------------------------------------------------\n",yytext);}
(if|else|switch)				{printf(" \t%-16s\t\t | Conditional statement\n---------------------------------------------------------------------------------------\n",yytext);}
(\".*\")					{printf(" \t%-16s\t\t | String \n---------------------------------------------------------------------------------------\n",yytext);}
(\;)						{printf(" \t%-16s\t\t | Semicolon \n---------------------------------------------------------------------------------------\n",yytext);}
([a-zA-Z0-9"."])*				{}
%% 
  
int yywrap(void){} 
  
int main() 
{    
    // The function that starts the analysis 
    yylex(); 
  
    return 0; 
} 


